generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  username     String   @unique
  password     String
  email        String   @unique
  phone        String?
  refreshToken String?
  avatar       String
  gender       String
  payment      Boolean
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Exam {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  duration    Int
  type        String
  price       Float
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

